{
  "name": "pallidium-site",
  "version": "1.0.0",
  "description": "Pallidium Site Project",
  "scripts": {
    "webpack:dev": "cross-env NODE_ENV=development webpack-dev-server --inline",
    "webpack:prod": "cross-env NODE_ENV=production webpack -p --progress",
    "prebuild": "rimraf dist",
    "build": "npm run webpack:prod",
    "presync": "find dist -type f \\( -iname \\*.js -o -iname \\*.css -o -iname \\*.html \\) -exec gzip -n \"{}\" \\; -exec mv \"{}.gz\" \"{}\" \\;",
    "sync": "npm run sync:assets && npm run sync:markup && npm run sync:files",
    "sync:assets": "aws s3 sync dist/ $AWS_DEPLOY_PATH --acl public-read --delete --exclude '*' --include '*.css' --include '*.js' --content-encoding gzip --cache-control public,max-age=30672000",
    "sync:markup": "aws s3 sync dist/ $AWS_DEPLOY_PATH --acl public-read --delete --exclude '*' --include '*.html' --content-encoding gzip --cache-control public,max-age=3600",
    "sync:files": "aws s3 sync dist/ $AWS_DEPLOY_PATH --acl public-read --size-only --delete --exclude '*.css' --exclude '*.js' --exclude '*.html'",
    "deploy": "npm run build && npm run sync",
    "start": "npm run webpack:dev"
  },
  "author": "Miles Goodings <miles.goodings@gmail.com>",
  "dependencies": {
    "angular": "^1.6.2",
    "angular-animate": "^1.6.2",
    "angular-ui-router": "^1.0.0-rc.1",
    "animate.css": "^3.5.2",
    "font-awesome": "^4.7.0",
    "material-design-lite": "^1.3.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-angularjs-annotate": "^0.7.0",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.2.3",
    "css-loader": "^0.26.2",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.1.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.0",
    "postcss-assets-webpack-plugin": "^1.0.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "postcss-mixins": "^5.4.1",
    "raw-loader": "^0.5.1",
    "rimraf": "2.6.1",
    "sass-loader": "^6.0.3",
    "standard": "^9.0.1",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.13.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
